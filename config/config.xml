<?xml version="1.0"?>
<config name="Config_Pre_Commit">

    <dir>
        <!--full path to the .git-->
        <git>.../.git/</git>
    </dir>
    
    <!--Run functions-->
    <run>
        <phpunit>false</phpunit>
        <phpcsfix>false</phpcsfix>
        <slack>true</slack>
    </run>
    
    <!--Config Slack-->
    <slackConfig>
        <username>webhookbot</username>
        <channel>#test</channel>
        <icon>:scissors:</icon>
        <url>https://hooks.slack.com/services/{token}</url>
    </slackConfig>
</config>
